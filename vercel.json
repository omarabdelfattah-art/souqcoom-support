{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "MISTRAL_API_KEY": "@mistral_api_key"
    },
    "functions": {
        "api/**/*.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}
